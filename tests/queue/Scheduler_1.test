%file: test.ned

import inet.common.newqueue.PacketCollector;
import inet.common.newqueue.PacketScheduler;
import inet.common.newqueue.PacketProvider;

network TestScheduler
{
    submodules:
        provider1: PacketProvider {
            @display("p=100,100");
        }
        provider2: PacketProvider {
            @display("p=100,200");
        }
        scheduler: PacketScheduler {
            @display("p=200,100");
        }
        collector: PacketCollector {
            @display("p=300,100");
        }
    connections allowunconnected:
        provider1.out --> scheduler.in++;
        provider2.out --> scheduler.in++;
        scheduler.out --> collector.in;
}

%file: Test.cc
#include <vector>
#include "inet/common/newqueue/PacketSchedulerFunction.h"
#include "inet/common/packet/Packet.h"
#include "inet/common/newqueue/contract/IPacketProvider.h"

using namespace inet; 

static int testSchedule(const std::vector<queue::IPacketProvider *>& providers)
{
    static int i = 0;
    return i++ % 2;
}

Register_Packet_Scheduler_Function(TestScheduler, testSchedule);

%inifile: omnetpp.ini

[General]
network = TestScheduler
sim-time-limit = 10s
cmdenv-event-banners = false
*.provider*.packetLength = 1B
*.collector.collectionInterval = 1s
*.scheduler.schedulerClass = "TestScheduler"

