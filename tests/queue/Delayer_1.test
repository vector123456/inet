%file: test.ned

import inet.common.newqueue.PacketConsumer;
import inet.common.newqueue.PacketDelayer;
import inet.common.newqueue.PacketProducer;

network TestDelayer
{
    submodules:
        producer: PacketProducer {
            @display("p=100,100");
        }
        delayer: PacketDelayer {
            @display("p=200,100");
        }
        consumer: PacketConsumer {
            @display("p=300,100");
        }
    connections allowunconnected:
        producer.out --> delayer.in;
        delayer.out --> consumer.in;
}

%inifile: omnetpp.ini

[General]
network = TestDelayer
sim-time-limit = 10s
cmdenv-event-banners = false
*.producer.packetLength = 1B
*.producer.productionInterval = 1s
*.delayer.delay = uniform(0s, 2s)

